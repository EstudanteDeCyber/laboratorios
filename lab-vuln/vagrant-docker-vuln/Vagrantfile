# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

####################################################################
##
## Para rodar capturando os outputs:
##
## vagrant up | Tee-Object -FilePath "vagrant_output.log" -Append
##
####################################################################

  config.vm.synced_folder '.', '/vagrant', disabled: true
  config.vm.boot_timeout = 900

# ===================================================================
#  VM Docker TOOLS - 10.10.10.102
# ===================================================================
  config.vm.define "Docker-Vuln" do |node|
    node.vm.box = "debian/bookworm64"
    node.vm.hostname = "Docker-Vuln"
		
    node.vm.provider "virtualbox" do |vb|
      vb.gui = false
      vb.memory = 5120
      vb.cpus = 1
      vb.name = "Docker-Vuln"
	  vb.customize ["modifyvm", :id, "--uart1", "0x3F8", "4"]
	  vb.customize ["modifyvm", :id, "--uartmode1", "file", File::NULL]
   end
   
   # Provisionamento espec√≠fico para o docker tools
  config.vm.provision "shell", inline: <<-SHELL
    
	# Baixa o script de provisionamento principal do GitHub
    wget -O /tmp/provisionamento_docker_vuln.sh https://raw.githubusercontent.com/EstudanteDeCyber/lab-sec/main/scripts/provisionamento_docker_vuln.sh
    chmod +x /tmp/provisionamento_docker_vuln.sh
    
    # Executa o script
    bash /tmp/provisionamento_docker_vuln.sh
	
  SHELL
 end
end
