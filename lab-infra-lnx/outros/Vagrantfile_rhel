	  elif [ -f /etc/redhat-release ]; then
	    # Rocky Linux
		localectl set-keymap br-abnt2 || echo " Falha ao definir layout br-abnt2 via localectl"
		localectl set-x11-keymap br abnt2 || echo " Falha ao definir layout X11 br-abnt2"
		echo "KEYMAP=br-abnt2" > /etc/vconsole.conf
		loadkeys br-abnt2 || loadkeys br || echo " Layout de teclado não encontrado"
	  fi  
  
